@{
    ViewData["Title"] = "Home Page";
}

<h1 class="display-4">Upload Files</h1>
<div class="row">
    <section>
        @using (Html.BeginForm("UploadTestFile", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
        <div class="form-group">
            <div class="col-md-10">
                <p>Choose a container for upload</p>
                <select name="containerName">
                    @foreach (var item in @Model) {
                    <option value="@item.Name">@item.Name</option>
                        }
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Choose a file to upload</p>
                <input type="file" name="file" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Upload" />
            </div>
        </div>
        }
    </section>
</div>